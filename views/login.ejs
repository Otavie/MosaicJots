<%- include('partials/header') %>

    <div class="login-container">
        <div class="inner-login-container">
            <div class="head">
                <h1>Login</h1>
            </div>

            <% if (errors.error) { %>
                <p style="color: red; font-weight: 500; "><%= errors.error %></p>
            <% } %>

            <div class="login-content">
                <form action="/login" method="POST" class="login-form">
                    <div class="form-field-container">
                        <div class="form-field">
                            <label for="email">Email:</label>
                            <input type="email" name="email" placeholder="Enter email address" value="<%= email %>" required /> 
                        </div>
                        <div class="field-error-container">
                            <span class="field-error"><%= errors.email %></span>
                        </div>
                    </div>

                    <div class="form-field-container">
                        <div class="form-field">
                            <label for="password">Password:</label>
                            <input type="password" name="password" placeholder="Enter password" required />
                        </div>
                        <div class="field-error-container">
                            <span class="field-error"><%= errors.password %></span>
                        </div>
                    </div>
                    
                    <button class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>

<%- include('partials/copy-right') %>
<%- include('partials/signup-form') %>
<%- include('partials/footer') %>
